<%- include('layouts/app') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Register</div>

        <div class="card-body">
          <form method="POST" action="/register">
            <!-- CSRF token if using one -->
            

            <% const errs = errors || {}; const oldValues = old || {}; %>

            <div class="row mb-3">
              <label for="name" class="col-md-4 col-form-label text-md-end">Name</label>
              <div class="col-md-6">
                <input
                  id="name"
                  type="text"
                  class="form-control <%= errs.name ? 'is-invalid' : '' %>"
                  name="name"
                  value="<%= oldValues.name || '' %>"
                  required
                  autocomplete="name"
                  autofocus
                >
                <% if (errs.name) { %>
                  <span class="invalid-feedback" role="alert">
                    <strong><%= errs.name %></strong>
                  </span>
                <% } %>
              </div>
            </div>

            <div class="row mb-3">
              <label for="email" class="col-md-4 col-form-label text-md-end">Email Address</label>
              <div class="col-md-6">
                <input
                  id="email"
                  type="email"
                  class="form-control <%= errs.email ? 'is-invalid' : '' %>"
                  name="email"
                  value="<%= oldValues.email || '' %>"
                  required
                  autocomplete="email"
                >
                <% if (errs.email) { %>
                  <span class="invalid-feedback" role="alert">
                    <strong><%= errs.email %></strong>
                  </span>
                <% } %>
              </div>
            </div>

            <div class="row mb-3">
              <label for="password" class="col-md-4 col-form-label text-md-end">Password</label>
              <div class="col-md-6">
                <input
                  id="password"
                  type="password"
                  class="form-control <%= errs.password ? 'is-invalid' : '' %>"
                  name="password"
                  required
                  autocomplete="new-password"
                >
                <% if (errs.password) { %>
                  <span class="invalid-feedback" role="alert">
                    <strong><%= errs.password %></strong>
                  </span>
                <% } %>
              </div>
            </div>

            <div class="row mb-3">
              <label for="password-confirm" class="col-md-4 col-form-label text-md-end">Confirm Password</label>
              <div class="col-md-6">
                <input
                  id="password-confirm"
                  type="password"
                  class="form-control"
                  name="password_confirmation"
                  required
                  autocomplete="new-password"
                >
              </div>
            </div>

            <div class="row mb-0">
              <div class="col-md-6 offset-md-4">
                <button type="submit" class="btn btn-primary">Register</button>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
